pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        ACCOUNT_ID = '905418283021'
        REPO_NAME = 'my-docker-repo'
        REGISTRY = "${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${REPO_NAME}"
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {

        stage('Cloning Git') {
            steps {
                git branch: 'master', url: 'https://github.com/Vandu0409/jenkins.git'
            }
        }

        stage('Build') {
            steps {
                dir('javaapp-standalone') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
               dir('javaapp-standalone') {
                script {
                    // Use the Dockerfile from project root or app folder
                    dockerImage = docker.build("${REGISTRY}:${IMAGE_TAG}", ".")
                }
               }
            }
        }

        stage('Push to ECR') {
            steps {
                script {
                    // ECR login and push using correct region
                    sh """
                    aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                    docker push ${REGISTRY}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Helm Deploy') {
            steps {
                script {
                    // Ensure namespace exists
                    sh "kubectl create namespace helm-deployment --dry-run=client -o yaml | kubectl apply -f -"
                    
                    // Deploy Helm chart with updated image tag
                    sh """
                    helm upgrade --install mychart ./mychart \
                      --namespace helm-deployment \
                      --set image.repository=${REGISTRY} \
                      --set image.tag=${IMAGE_TAG}
                    """
                }
            }
        }
    }
}
