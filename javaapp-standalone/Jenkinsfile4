pipeline {

  options {
    skipDefaultCheckout()     // ðŸ”¥ IMPORTANT FIX
  }

  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:

  - name: builder
    image: maven:3.9.6-eclipse-temurin-21
    command: ['cat']
    tty: true
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent

  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command: ['cat']
    tty: true
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent
    - name: docker-config
      mountPath: /kaniko/.docker/

  - name: helm
    image: alpine/helm:3.11.2
    command: ['cat']
    tty: true
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent

  volumes:
  - name: workspace
    emptyDir: {}
  - name: docker-config
    secret:
      secretName: regcred
      items:
      - key: .dockerconfigjson
        path: config.json
"""
    }
  }

  environment {
    DOCKERHUB_USER = "vandu0409"
    IMAGE_REPO     = "vandu0409/javaapp"
    IMAGE_TAG      = "${BUILD_NUMBER}"
  }

  stages {

    stage("Clone Repository Inside Builder") {
      steps {
        container('builder') {
          sh """
            echo "===== CLONING CODE INSIDE POD ====="
            cd /home/jenkins/agent
            git clone -b k8s-jenkins https://github.com/Vandu0409/jenkins.git repo
            ls -la repo
          """
        }
      }
    }

    stage("Build JAR") {
      steps {
        container('builder') {
          sh """
            cd repo/javaapp-standalone
            mvn clean package -DskipTests
            ls -la target
          """
        }
      }
    }

    stage("Build Docker Image (Kaniko)") {
      steps {
        container('kaniko') {
          sh """
            /kaniko/executor \
              --dockerfile=repo/javaapp-standalone/Dockerfile \
              --context=`pwd`/repo/javaapp-standalone \
              --destination=docker.io/${IMAGE_REPO}:${IMAGE_TAG}
          """
        }
      }
    }

    stage("Deploy to Kubernetes") {
      steps {
        container('helm') {
          sh """
            helm upgrade --install javaapp repo/javaapp-standalone/chart/my-java-app \
              --namespace javaapp \
              --set image.repository=docker.io/${IMAGE_REPO} \
              --set image.tag=${IMAGE_TAG}
          """
        }
      }
    }
  }
}
