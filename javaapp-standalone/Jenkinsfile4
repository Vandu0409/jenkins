pipeline {

    agent none

    environment {
        GIT_URL       = "https://github.com/Vandu0409/jenkins.git"
        GIT_BRANCH    = "k8s-jenkins"

        IMAGE_REPO    = "vandu0409/javaapp"
        IMAGE_TAG     = "${BUILD_NUMBER}"
        FULL_IMAGE    = "docker.io/${IMAGE_REPO}:${IMAGE_TAG}"

        K8S_NAMESPACE = "javaapp"
        RELEASE_NAME  = "javaapp"
    }

    stages {

        stage("Build + Image + Deploy (Single Pod)") {

            agent {
                kubernetes {
                    yaml """
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: jenkins-admin
  containers:

  - name: maven
    image: maven:3.9.6-eclipse-temurin-21
    command: ["sleep"]
    args: ["999999"]
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent

  - name: kaniko
    image: gcr.io/kaniko-project/executor:v1.9.0-debug
    command: ["/busybox/sleep"]
    args: ["999999"]
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent
    - name: docker-config
      mountPath: /kaniko/.docker/

  - name: helm
    image: alpine/helm:3.11.2
    command: ["sleep"]
    args: ["999999"]
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent

  - name: jnlp
    image: jenkins/inbound-agent:latest
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent

  volumes:
  - name: workspace
    emptyDir: {}
  - name: docker-config
    secret:
      secretName: regcred
      items:
      - key: .dockerconfigjson
        path: config.json
"""
                }
            }

            stages {

             stage("Clone Repo") {
    steps {
        container("maven") {
            sh """
                cd /home/jenkins/agent
                git clone --branch k8s-jenkins https://github.com/Vandu0409/jenkins.git repo
                ls -l repo
            """
        }
    }
}


                stage("Build JAR") {
                    steps {
                        container("maven") {
                            sh """
                                cd /home/jenkins/agent/repo/javaapp-standalone
                                mvn -Dmaven.test.skip=true clean package
                                ls -l target
                            """
                        }
                    }
                }

                stage("Build Docker Image (Kaniko)") {
                    steps {
                        container("kaniko") {
                            sh """
                                /kaniko/executor \
                                  --dockerfile=/home/jenkins/agent/repo/javaapp-standalone/Dockerfile \
                                  --context=/home/jenkins/agent/repo/javaapp-standalone \
                                  --destination=${FULL_IMAGE} \
                                  --single-snapshot
                            """
                        }
                    }
                }

                stage("Deploy to Kubernetes") {
                    steps {
                        container("helm") {
                            sh """
                                helm upgrade --install ${RELEASE_NAME} \
                                  /home/jenkins/agent/repo/javaapp-standalone/chart/my-java-app \
                                  --namespace ${K8S_NAMESPACE} \
                                  --set image.repository=docker.io/${IMAGE_REPO} \
                                  --set image.tag=${IMAGE_TAG}
                            """
                        }
                    }
                }
            }
        }
    }
}
