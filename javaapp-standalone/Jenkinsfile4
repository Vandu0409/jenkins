pipeline {

    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: jenkins-cicd
spec:
  restartPolicy: Never

  containers:

  - name: maven
    image: maven:3.9.6-eclipse-temurin-21
    command: ["cat"]
    tty: true
    volumeMounts:
      - name: workspace-volume
        mountPath: /home/jenkins/agent

  - name: kaniko
    image: gcr.io/kaniko-project/executor:v1.16.0-debug
    command: ["/busybox/sh"]
    args: ["-c", "sleep 999999"]
    tty: true
    volumeMounts:
      - name: workspace-volume
        mountPath: /home/jenkins/agent
      - name: docker-config
        mountPath: /kaniko/.docker/

  - name: helm
    image: alpine/helm:3.11.2
    command: ["cat"]
    tty: true
    volumeMounts:
      - name: workspace-volume
        mountPath: /home/jenkins/agent

  - name: jnlp
    image: jenkins/inbound-agent:latest
    env:
      - name: JENKINS_URL
        value: "http://jenkins.jenkins.svc.cluster.local:8080/"
    tty: true
    volumeMounts:
      - name: workspace-volume
        mountPath: /home/jenkins/agent

  volumes:
    - name: workspace-volume
      emptyDir: {}

    - name: docker-config
      secret:
        secretName: regcred
        items:
          - key: .dockerconfigjson
            path: config.json
"""
        }
    }

    environment {
        APP_NAME = "java-sample-app"
        IMAGE = "vandana0409/java-sample-app:latest"
    }

    stages {

        stage("Checkout") {
            steps {
                echo "üì• Checking out source code"
                checkout scm
            }
        }

        stage("Build JAR") {
            steps {
                container("maven") {
                    sh """
                        echo '===== Building JAR ====='
                        mvn -Dmaven.test.skip=true clean package
                    """
                }
            }
        }

        stage("Build Docker Image (Kaniko)") {
            steps {
                container("kaniko") {
                    sh """
                        echo '===== Building Docker Image with Kaniko ====='
                        /kaniko/executor \
                            --dockerfile=Dockerfile \
                            --context=/home/jenkins/agent/workspace/${JOB_NAME}/javaapp-standalone \
                            --destination=${IMAGE} \
                            --verbosity=info
                    """
                }
            }
        }

        stage("Deploy to Kubernetes") {
            steps {
                container("helm") {
                    sh """
                        echo '===== Deploying to EKS with Helm ====='
                        helm upgrade --install ${APP_NAME} \
                          javaapp-standalone/chart/my-java-app \
                          --set image.repository=vandana0409/java-sample-app \
                          --set image.tag=latest
                    """
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ CI/CD Pipeline Completed Successfully!"
        }
        failure {
            echo "‚ùå Pipeline Failed ‚Äî Check Logs"
        }
    }
}
