pipeline {

    agent none

    environment {
        DOCKERHUB_USER = "vandu0409"
        IMAGE_REPO     = "vandu0409/javaapp"
        IMAGE_TAG      = "${BUILD_NUMBER}"

        K8S_NAMESPACE  = "javaapp"
        RELEASE_NAME   = "javaapp"
    }

    stages {

        stage("Build, Image & Deploy (Single Pod)") {

            agent {
                kubernetes {
                    yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: builder
    image: maven:3.9.6-eclipse-temurin-21
    command: ['cat']
    tty: true
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent

  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command: ['cat']
    tty: true
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent
    - name: docker-config
      mountPath: /kaniko/.docker/

  - name: helm
    image: alpine/helm:3.11.2
    command: ['cat']
    tty: true
    volumeMounts:
    - name: workspace
      mountPath: /home/jenkins/agent

  volumes:
  - name: workspace
    emptyDir: {}
  - name: docker-config
    secret:
      secretName: regcred
      items:
      - key: .dockerconfigjson
        path: config.json
"""
                }
            }

            steps {

                stage("Clone Repository") {
                    container('builder') {
                        sh """
                            cd /home/jenkins/agent
                            git clone -b k8s-jenkins https://github.com/Vandu0409/jenkins.git
                            ls -la
                        """
                    }
                }

                stage("Build JAR") {
                    container('builder') {
                        sh """
                            cd /home/jenkins/agent/jenkins/javaapp-standalone
                            mvn clean package -DskipTests
                            ls -la target
                        """
                    }
                }

                stage("Build Docker Image (Kaniko)") {
                    container('kaniko') {
                        sh """
                            cd /home/jenkins/agent/jenkins
                            /kaniko/executor \
                              --dockerfile=javaapp-standalone/Dockerfile \
                              --context=/home/jenkins/agent/jenkins \
                              --destination=docker.io/${IMAGE_REPO}:${IMAGE_TAG}
                        """
                    }
                }

                stage("Deploy to Kubernetes") {
                    container('helm') {
                        sh """
                            helm upgrade --install ${RELEASE_NAME} \
                            /home/jenkins/agent/jenkins/javaapp-standalone/chart/my-java-app \
                              --namespace ${K8S_NAMESPACE} \
                              --create-namespace \
                              --set image.repository=docker.io/${IMAGE_REPO} \
                              --set image.tag=${IMAGE_TAG}
                        """
                    }
                }
            }
        }
    }
}
