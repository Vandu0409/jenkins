pipeline {

    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    imagePullPolicy: Always
    command:
    - sleep
    args:
    - "999999"
    volumeMounts:
    - name: docker-config
      mountPath: /kaniko/.docker/
  volumes:
  - name: docker-config
    projected:
      sources:
      - secret:
          name: regcred
          items:
          - key: .dockerconfigjson
            path: config.json
"""
        }
    }

    environment {
        DOCKER_REPO   = "vandu0409/javaapp"
        IMAGE_TAG     = "${BUILD_NUMBER}"

        K8S_NAMESPACE = "javaapp"
        RELEASE_NAME  = "javaapp"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/Vandu0409/jenkins.git'
            }
        }

        stage('Build Java App (Maven)') {
            steps {
                dir('javaapp-standalone') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build & Push Docker Image with Kaniko') {
            steps {
                container('kaniko') {
                    sh '''
                        /kaniko/executor \
                          --context `pwd`/javaapp-standalone \
                          --dockerfile `pwd`/javaapp-standalone/Dockerfile \
                          --destination docker.io/vandu0409/javaapp:${IMAGE_TAG} \
                          --skip-tls-verify \
                          --verbosity info
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes via Helm') {
            steps {
                sh """
                    # Create namespace if not found
                    kubectl get ns ${K8S_NAMESPACE} || kubectl create ns ${K8S_NAMESPACE}

                    # Deploy with Helm using Docker Hub image
                    helm upgrade --install ${RELEASE_NAME} ./javaapp-helm \
                      --namespace ${K8S_NAMESPACE} \
                      --set image.repository=docker.io/${DOCKER_REPO} \
                      --set image.tag=${IMAGE_TAG}
                """
            }
        }
    }

    post {
        success {
            echo "✅ Deployment Successful! App deployed with image tag ${IMAGE_TAG}"
        }
        failure {
            echo "❌ Deployment Failed. Check logs!"
        }
    }
}

